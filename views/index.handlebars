<div class="container">
    <h2 class="text-center">Eat-Da-Burger</h2>

    <div class="row" id="both-lists">
        <div class="col-6 burgers-list" id="menu-items">
            <h4 class="text-center">Menu</h4>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <li>
                            {{burger_name}}
                            <button class="change-devour" data-id="{{id}}" data-newdev="{{devoured}}">Devour Me!</button>

                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div  class="col-6 burgers-list" id="devoured-items">
            <h4>Devoured Burgers</h4>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>
                            {{burger_name}}
                            <button class="change-devour" data-id="{{id}}" data-newdev="{{devoured}}">Make Me Again!</button>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="burger-form">
        <form class="create-form">

            <div class="form-group">
                <label for="burName">Burger Name:</label>
                <input type="text" id="burName" name="name">
            </div>

            <button type="submit">Add Burger</button>
        </form>
    </div>

</div>