<div class="container">
    <h2>Eat-Da-Burger</h2>

    <div class="row">
        <div class="col">
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <div class="burger-list">
                            {{burger_name}}<button id="{{id}}">Devour Me!</button>
                        </div>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <h4 class="text-left">{{burger_name}}</h4>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <form class="create-form">

        <div class="form-group">
            <label for="burName">Burger Name:</label>
            <input type="text" id="burName" name="name">
        </div>

        <button type="submit">Add Burger</button>
    </form>
</div>