<div class="container">
    <h2>Eat-Da-Burger</h2>

    <div class="row">
        <div class="col">
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <li>
	                        {{burger_name}}
	                        <button class="change-devour" data-id="{{id}}" data-newdev="{{devoured}}">Devour Me!</button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>
                            {{burger_name}}
                            <button class="change-devour" data-id="{{id}}" data-newdev="{{devoured}}">Make Me Again!</button>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <form class="create-form">

        <div class="form-group">
            <label for="burName">Burger Name:</label>
            <input type="text" id="burName" name="name">
        </div>

        <button type="submit">Add Burger</button>
    </form>
</div>