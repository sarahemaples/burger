<h2>Eat-Da-Burger</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            <p>{{burger_name}}</p>
        {{/unless}}
    {{/each}}
</ul>

<form class="create-form">

    <div class="form-group">
        <label for="burName">Burger Name:</label>
        <input type="text" id="burName" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            <p>{{burger_name}}</p>
        {{/if}}
    {{/each}}
</ul>